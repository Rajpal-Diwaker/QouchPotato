<html>
<title><%= title %></title>
   <body>
      <form action="<%= action %>" method="post">
         <fieldset>
            <label for="name">Username:</label><br>
            <input type="text" id="firstName" name="firstName" placeholder="Enter the username" />
            <br />
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email" placeholder="Enter your email address" />
            <br />
            <label for="description">Password:</label><br>
            <input type="text" id="password" name="password" placeholder="Enter password">
            <br />
            <label for="description">Confirm Password:</label><br>
            <input type="text" id="confirm_password" name="confirm_password" placeholder="Confirm password">
            <br /><br>
            <input type="submit" value="Create Profile" />
         </fieldset>
      </form>
   </body>

</html>